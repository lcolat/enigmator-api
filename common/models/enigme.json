            "source": "path"
          }
        },
        {
          "arg": "answer",
          "type": "string",
          "required": true,
          "description": "The answer provided by the user"
        },
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": [
        {
          "args": "result",
          "type": "object",
          "root" : true
        }
      ],
      "description": "Answer to an Enigme ",
      "http": [
        {
          "path": "/AnswerEnigme",
          "verb": "post"
        }
      ]
    },
    "CreateEnigme": {
      "accepts": [
        {
          "arg": "question",
          "type": "string",
          "required": true,
          "description": "question"
        },
        {
          "arg": "answer",
          "type": "string",
          "required": true,
          "description": "answer"
        },
        {
          "arg": "name",
          "type": "string",
          "required": true,
          "description": "answer"
        },
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": [
        {
          "arg":"result",
          "type" :"object",
          "root" : true
        }
      ],
      "description": "Create an Enigme",
      "http": [
        {
          "path": "/CreateEnigme",
          "verb": "post"
        }
      ]
    },
    "prototype.AddMediaToEnigme": {
      "accepts": [
        {
          "arg": "id",
          "type": "string",
