{
  "name": "Topic",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "creationDate": {
      "type": "date",
      "required": true
    },
    "title":{
      "type" : "string",
      "required":true
    }
  },
  "validations": [],
  "relations": {
    "enigmes": {
      "type": "hasOne",
      "model": "Enigme",
      "foreignKey": "",
      "options": {
        "nestRemoting": true,
        "disableInclude": true
      }
    },
    "userEnigmators": {
      "type": "belongsTo",
      "model": "UserEnigmator",
      "foreignKey": "",
      "options": {
        "nestRemoting": true,
        "disableInclude": true
      }
    }
  },
  "acls": [],
  "methods": { "prototype.PostAMessage": {
    "accepts": [
      {
        "arg": "content",
        "type": "string",
        "required": true,
        "description": "contenus du message"
      },
      {
        "arg": "options",
        "type": "object",
        "http": "optionsFromRequest"
      }
    ],
    "returns": [],
    "description": "Ajouter un amis",
    "http": [
      {
        "path": "/PostAMessage",
        "verb": "post"
      }
    ]
  }}
}
