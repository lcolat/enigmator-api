  },
  "properties": {
    "id": {
      "type": "number",
      "required": true
    },
    "content": {
      "type": "string"
    },
    "creationDate": {
      "type": "date",
      "default": "$now"
    },
    "likes": {
      "type": "number",
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "topic": {
      "type": "belongsTo",
      "model": "Topic",
      "foreignKey": "",
